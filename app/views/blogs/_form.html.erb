<%= stylesheet_link_tag "application" %>

<%= form_with(model: @blog, local: true, url: choose_new_or_edit) do |form| %>
    <% if @blog.errors.any? %>
        <div class="notice", id="error_explanation">
            <ul>
                <% @blog.errors.full_messages.each do |msg| %>
　　                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

  <div  style="height:430px; overflow-y:auto;">
    <form>
      <div class="form-group">
        <label for="title">タイトル</label>
        <%= form.text_area :title, :class => "form-control" %>
      </div>
      <div class="form-group">
        <label for="content">本文</label>
        <%= form.text_area :content, :class => "form-control", :rows => 3 %>
      </div>
      <div class="form-group">
        <label for="image">画像</label>
        <%= form.file_field :image, id: :blog_image %>
        <%= form.hidden_field :image_cache %>
      </div>
        <%= form.hidden_field :user_id, :value => current_user.id %>
      <%= form.submit "登録", class: "btn btn-primary" %>

    </form>
　</div>
<% end %>
