<%= stylesheet_link_tag "application" %>

<div class="container-fluid">
  <div class="row">
    <div class="title">
        <h1>以下の内容で、登録する。</h1>
    </div>
  </div>

  <div  style="width:100%; height:430px; padding-top:10px; overflow-y:auto;">   
    <%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
      <div>
        <%= form.hidden_field :title %>
        <%= form.hidden_field :content %>
        <%= form.hidden_field :user_id %>
        <%= form.hidden_field :image %>
        <%= hidden_field_tag :"cache[image]", @blog.image.cache_name %>
        <p>タイトル：</p>
        <p style="font-size:1.5rem; word-wrap:break-word;"><%= @blog.title %></p>
        <p>本文：</p>
        <p style="font-size:1.5rem; word-wrap:break-word;"><%= @blog.content %></p>
        <%= image_tag @blog.image.url %>
      </div>
      <div>
        <%= form.submit "登録する", :class => "btn btn-primary" %>
      </div>
    <% end %>

    <%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
        <%= form.hidden_field :title %>
        <%= form.hidden_field :content %>
        <%= form.hidden_field :user_id %>
        <%= form.hidden_field :image %>
        <%= form.submit "  戻る  ", name: 'back', :class => "btn btn-info" %>
    <% end %>
  </div>
</div>